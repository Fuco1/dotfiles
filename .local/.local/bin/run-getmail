#!/bin/sh

export PATH=/home/matus/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
export GOPASS_CONFIG=/home/matus/.config/gopass/config
export NOTMUCH_CONFIG=/home/matus/.config/notmuch/config
export GNUPGHOME="/home/matus/.gnupg"
LOG_FILE="/home/matus/.run-getmail.log"

echo "[$(date --iso-8601=seconds)] ===============================================================" >>$LOG_FILE
echo "Running as $USER in $HOME"

process-deleted >>$LOG_FILE 2>&1
offlineimap -c /home/matus/.offlineimaprc >>$LOG_FILE 2>&1
notmuch new >>$LOG_FILE 2>&1
