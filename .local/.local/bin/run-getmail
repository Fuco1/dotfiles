#!/bin/sh

export GNUPGHOME="/home/matus/.gnupg"
LOG_FILE="/home/matus/.run-getmail.log"

echo "[$(date --iso-8601=seconds)] ===============================================================" >>$LOG_FILE
/home/matus/.local/bin/process-deleted >>$LOG_FILE 2>&1
/usr/bin/offlineimap -c /home/matus/.offlineimaprc >>$LOG_FILE 2>&1
/usr/local/bin/notmuch --config /home/matus/.config/notmuch/config new >>$LOG_FILE 2>&1
