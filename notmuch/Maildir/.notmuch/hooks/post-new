#!/usr/bin/env bash

notmuch tag +muni -- tag:new and from:muni.cz
notmuch tag +twitter -- tag:new and from:twitter.com

notmuch tag +ydistri -- tag:new and to:ydistri.com
notmuch tag +ydistri -- tag:new and from:ydistri.com

# newsletters
notmuch tag +newsletter -- tag:new and from:jakub@programmingdigest.net
notmuch tag +newsletter -- tag:new and from:hi@16personalities.com

# Github
notmuch tag +github -- tag:new and notifications@github.com

# Tag according to folders
notmuch tag -inbox -- tag:inbox and not 'folder:/INBOX/'
notmuch tag -important -- tag:important and not 'folder:/\[Gmail\]\.Important/'
notmuch tag -starred -- tag:starred and not 'folder:/\[Gmail\]\.Starred/'

notmuch tag +inbox -- not tag:inbox and 'folder:/INBOX/'
notmuch tag +important -- not tag:important and 'folder:/\[Gmail\]\.Important/'
notmuch tag +starred -- not tag:starred and 'folder:/\[Gmail\]\.Starred/'
notmuch tag +trash -inbox -- not tag:trash and 'folder:/\[Gmail\]\.Bin/'
notmuch tag +trash -inbox -- not tag:trash and 'folder:/\[Gmail\]\.Trash/'

# Untag new since those mails were already processed
notmuch tag -new -- tag:new
