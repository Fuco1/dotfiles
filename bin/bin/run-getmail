#!/bin/sh

if [ -f "/home/matus/.cache/gpg-agent-info" ]; then
    . "/home/matus/.cache/gpg-agent-info"
    export GPG_AGENT_INFO
fi
export GNUPGHOME="/home/matus/.gnupg"

/usr/bin/mbsync --config /home/matus/.mbsyncrc logio >> /dev/null 2>&1
WHERE=$(/bin/cat /home/matus/.whereami)
if [ "$WHERE" = "home" -o "$WHERE" = "brno" ] ; then
    /usr/bin/mbsync --config /home/matus/.mbsyncrc goljer >> /dev/null 2>&1
    /usr/bin/mbsync --config /home/matus/.mbsyncrc dota >> /dev/null 2>&1
fi

/usr/bin/notmuch new
