#!/bin/sh

/usr/bin/mbsync --config /home/matus/.mbsyncrc logio
WHERE=$(/bin/cat /home/matus/.whereami)
if [ "$WHERE" = "home" -o "$WHERE" = "brno" ] ; then
    /usr/bin/mbsync --config /home/matus/.mbsyncrc goljer
    /usr/bin/mbsync --config /home/matus/.mbsyncrc dota
fi
/usr/local/bin/notmuch new
